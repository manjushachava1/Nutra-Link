<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.manjushachava.foodapp">

    <application
        android:name=".Controller"
        android:allowBackup="true"
        android:icon="@mipmap/nutralink_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/nutralink_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Homescreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".NutrientSearch" android:parentActivityName=".Homescreen"/>
        <activity android:name=".FoodSearch" android:parentActivityName=".Homescreen"/>
        <activity android:name=".TopTenView" android:parentActivityName=".nutrientsView"/>
        <activity android:name=".nutrientsView" android:parentActivityName=".FoodSearch"/>
    </application>

</manifest>